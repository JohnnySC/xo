<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <Button
            tools:text="O"
            android:textSize="50sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/cell4Button"
            android:background="?attr/selectableItemBackground"
            android:layout_width="@dimen/cell_size"
            android:layout_height="@dimen/cell_size"/>
    <Button
            tools:text="O"
            android:textSize="50sp"
            app:layout_constraintEnd_toStartOf="@id/cell4Button"
            app:layout_constraintTop_toTopOf="@id/cell4Button"
            app:layout_constraintBottom_toBottomOf="@id/cell4Button"
            android:id="@+id/cell3Button"
            android:background="?attr/selectableItemBackground"
            android:layout_width="@dimen/cell_size"
            android:layout_height="@dimen/cell_size"/>
    <Button
            tools:text="X"
            android:textSize="50sp"
            app:layout_constraintStart_toEndOf="@id/cell4Button"
            app:layout_constraintTop_toTopOf="@id/cell4Button"
            app:layout_constraintBottom_toBottomOf="@id/cell4Button"
            android:id="@+id/cell5Button"
            android:background="?attr/selectableItemBackground"
            android:layout_width="@dimen/cell_size"
            android:layout_height="@dimen/cell_size"/>
    <Button
            tools:text="X"
            android:textSize="50sp"
            app:layout_constraintBottom_toTopOf="@id/cell4Button"
            app:layout_constraintStart_toStartOf="@id/cell4Button"
            android:id="@+id/cell1Button"
            android:background="?attr/selectableItemBackground"
            android:layout_width="@dimen/cell_size"
            android:layout_height="@dimen/cell_size"/>
    <Button
            tools:text="O"
            android:textSize="50sp"
            app:layout_constraintEnd_toStartOf="@id/cell1Button"
            app:layout_constraintTop_toTopOf="@id/cell1Button"
            android:id="@+id/cell0Button"
            android:background="?attr/selectableItemBackground"
            android:layout_width="@dimen/cell_size"
            android:layout_height="@dimen/cell_size"/>
    <Button
            tools:text="O"
            android:textSize="50sp"
            app:layout_constraintTop_toTopOf="@id/cell1Button"
            app:layout_constraintStart_toEndOf="@id/cell1Button"
            android:id="@+id/cell2Button"
            android:background="?attr/selectableItemBackground"
            android:layout_width="@dimen/cell_size"
            android:layout_height="@dimen/cell_size"/>
    <Button
            tools:text="X"
            android:textSize="50sp"
            app:layout_constraintTop_toBottomOf="@id/cell4Button"
            app:layout_constraintStart_toStartOf="@id/cell4Button"
            android:id="@+id/cell7Button"
            android:background="?attr/selectableItemBackground"
            android:layout_width="@dimen/cell_size"
            android:layout_height="@dimen/cell_size"/>
    <Button
            tools:text="O"
            android:textSize="50sp"
            app:layout_constraintEnd_toStartOf="@id/cell7Button"
            app:layout_constraintTop_toTopOf="@id/cell7Button"
            android:id="@+id/cell6Button"
            android:background="?attr/selectableItemBackground"
            android:layout_width="@dimen/cell_size"
            android:layout_height="@dimen/cell_size"/>
    <Button
            tools:text="X"
            android:textSize="50sp"
            app:layout_constraintStart_toEndOf="@id/cell7Button"
            app:layout_constraintTop_toTopOf="@id/cell7Button"
            android:id="@+id/cell8Button"
            android:background="?attr/selectableItemBackground"
            android:layout_width="@dimen/cell_size"
            android:layout_height="@dimen/cell_size"/>

    <View
            app:layout_constraintTop_toTopOf="@id/cell0Button"
            app:layout_constraintBottom_toBottomOf="@id/cell6Button"
            app:layout_constraintStart_toEndOf="@id/cell0Button"
            android:layout_width="1dp"
            android:background="@color/dividerColor"
            android:layout_height="0dp"/>

    <View
            app:layout_constraintTop_toTopOf="@id/cell0Button"
            app:layout_constraintBottom_toBottomOf="@id/cell6Button"
            app:layout_constraintStart_toEndOf="@id/cell1Button"
            android:layout_width="1dp"
            android:background="@color/dividerColor"
            android:layout_height="0dp"/>

    <View
            app:layout_constraintBottom_toBottomOf="@id/cell4Button"
            app:layout_constraintStart_toStartOf="@id/cell6Button"
            app:layout_constraintEnd_toEndOf="@id/cell8Button"
            android:layout_width="0dp"
            android:background="@color/dividerColor"
            android:layout_height="1dp"/>

    <View
            app:layout_constraintBottom_toBottomOf="@id/cell1Button"
            app:layout_constraintStart_toStartOf="@id/cell6Button"
            app:layout_constraintEnd_toEndOf="@id/cell8Button"
            android:layout_width="0dp"
            android:background="@color/dividerColor"
            android:layout_height="1dp"/>

    <TextView
            android:id="@+id/messageTextView"
            tools:text="message here"
            app:layout_constraintBottom_toTopOf="@id/cell1Button"
            android:layout_marginBottom="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <Button
            android:id="@+id/newGameButton"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:text="@string/new_game"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            tools:text="5"
            android:textSize="16sp"
            android:textColor="@color/colorAccent"
            android:id="@+id/timerTextView"
            app:layout_constraintBottom_toTopOf="@id/messageTextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <ImageButton
            android:id="@+id/settingsButton"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@android:drawable/ic_menu_preferences"
            android:background="#0000"
            android:layout_width="48dp"
            android:layout_height="48dp"
            tools:ignore="ContentDescription"/>

</androidx.constraintlayout.widget.ConstraintLayout>